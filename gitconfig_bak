[alias]
        bl = blame -L
        br = branch -v
        ci = commit
        cid = commit --amend
        co = checkout
        di = diff
        dt = difftool -y
        ignore = update-index --assume-unchanged
        last = log -1
        logg = log --graph
        ls = ls-files -v
        mg = merge
        shows = show --stat
        st = status
        unstage = reset HEAD --
        unignore = update-index --no-assume-unchanged
[color]
        ui = true
        diff = auto
        status = auto
        branch = auto
        interactive = true
[diff]
        tool = mymeld.sh
[merge]
        tool = mymeld.sh
[core]
        editor = vim
